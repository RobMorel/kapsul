<h1>All Capsules</h1>

<% @capsules.each do |capsule| %>
  <div>
    <h2><%= capsule.title %></h2>
    <p>address: <%= capsule.address %></p>
  </div>
<% end %>

<%= @markers %>
<div style='width: 800px; height: 400px;'
     data-controller="map"
     data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
     data-map-markers-value="<%= @markers.to_json %>"
     >
</div>
