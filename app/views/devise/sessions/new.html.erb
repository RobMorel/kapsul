<div class="bg-login" style="background-image: url('<%= asset_path('images/icons/Photo/login_bg4.jpg') %>'); background-size: cover; background-position: center; background-repeat: no-repeat;">
  <div class="form-container">
    <div class="logo-wrapper">
      <%= image_tag("icons/Photo/logo-capsule-top.png", alt: "App Logo", width: "150", height: "auto") %>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>
    <div class="form-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
